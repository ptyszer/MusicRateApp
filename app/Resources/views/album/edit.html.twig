{% extends 'base.html.twig' %}

{% block title %}Edycja - MusicRate{% endblock %}
{% block container %}
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Edytuj album:</h5>
            {{ form_start(edit_form) }}
            <div class="form-group">
                {{ form_label(edit_form.name, 'Nazwa', {'label_attr': {'class': 'bmd-label-static'}}) }}
                {{ form_errors(edit_form.name) }}
                {{ form_widget(edit_form.name, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(edit_form.description, 'Opis', {'label_attr': {'class': 'bmd-label-static'}}) }}
                {{ form_errors(edit_form.description) }}
                {{ form_widget(edit_form.description, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(edit_form.release_date, 'Data wydania', {'label_attr': {'class': 'bmd-label-static'}}) }}
                {{ form_errors(edit_form.release_date) }}
                {{ form_widget(edit_form.release_date, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(edit_form.genres, 'Gatunki', {'label_attr': {'class': 'bmd-label-static'}}) }}
                {{ form_widget(edit_form.genres, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" name="approved" id="approved" checked>
                <label class="form-check-label" for="approved">Zatwierdź do dodania</label>
            </div>
            <input type="submit" value="Edytuj" class="btn btn-primary btn-raised" />
            {{ form_end(edit_form) }}

            {{ form_start(delete_form) }}
            <input type="submit" value="Usuń" class="btn btn-outline-danger btn-sm" />
            {{ form_end(delete_form) }}
        </div>
    </div>


{% endblock %}
