{% extends 'base.html.twig' %}

{% block title %}Edycja - MusicRate{% endblock %}
{% block container %}

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Edytuj wykonawce:</h5>
            {{ form_start(edit_form) }}
            <div class="form-group">
                {{ form_label(edit_form.name, 'Nazwa', {'label_attr': {'class': 'bmd-label-static'}}) }}
                {{ form_errors(edit_form.name) }}
                {{ form_widget(edit_form.name, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(edit_form.description, 'Opis', {'label_attr': {'class': 'bmd-label-static'}}) }}
                {{ form_errors(edit_form.description) }}
                {{ form_widget(edit_form.description, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" name="approved" id="approved" checked>
                <label class="form-check-label" for="approved">Zatwierdź do dodania</label>
            </div>
            <div class="form-group">
                {{ form_label(edit_form.image, 'Zdjęcie', {'label_attr': {'class': 'bmd-label-static'}}) }}
                {{ form_errors(edit_form.image) }}
                {{ form_widget(edit_form.image, {'attr': {'class': 'form-control-file'}}) }}
            </div>
            <input type="submit" value="Edytuj" class="btn btn-primary btn-raised" />
            {{ form_end(edit_form) }}

            {{ form_start(delete_form) }}
            <input type="submit" value="Usuń" class="btn btn-outline-danger btn-sm" />
            {{ form_end(delete_form) }}
        </div>
    </div>

{% endblock %}
