{% extends "base.html.twig" %}

{% block title %}Moja strona{% endblock %}

{% block container %}
    <h4>Dodane przeze mnie</h4>
    <div class="row">

        {#artists#}
        <div class="col-sm">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">Wykonawcy</th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>
                {% for artist in artists %}
                    <tr>
                        <td>
                            <a href="{{ path('artist_show', { 'id': artist.id }) }}">
                                {{ artist.name }}
                            </a>
                        </td>
                        <td>
                            {% if not artist.public %}
                                <a href="{{ path('artist_edit', {'id': artist.id}) }}" class="badge badge-primary">Edytuj</a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        {#albums#}
        <div class="col-sm">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">Albumy</th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>
                {% for album in albums %}
                    <tr>
                        <td>
                            <a href="{{ path('album_show', { 'id': album.id }) }}">
                                {{ album.name }} ({{ album.artist.name }})
                            </a>
                        </td>
                        <td>
                            {% if not album.public %}
                                <a href="{{ path('album_edit', {'id': album.id}) }}" class="badge badge-primary">Edytuj</a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        {#genres#}
        <div class="col-sm">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">Gatunki muzyczne</th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>
                {% for genre in genres %}
                    <tr>
                        <td>
                            <a href="{{ path('genre_show', { 'id': genre.id }) }}">
                                {{ genre.name }}
                            </a>
                        </td>
                        <td>
                            {% if not genre.public %}
                                <a href="{{ path('genre_edit', {'id': genre.id}) }}" class="badge badge-primary">Edytuj</a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    </div>
{% endblock %}
